.tile
  margin-bottom 60px
  height calc(100vh - 224px)
  min-height 600px
  &__row
    display flex
    justify-content space-between
    height 100%
  &__col
    width calc(100%/3 - 6px)
  &__item
    display flex
    justify-content center
    align-items center
    position relative
    height 100%
    margin-bottom 9px
    background-size cover
    background-repeat no-repeat
    background-position 50% 50%
    overflow hidden
    z-index 1
    &:last-child
      margin-bottom 0
    &--middle
      height calc(50% + 75.5px)
    &--min
      height calc(50% - 84.5px)
    &-back
      position absolute
      left 0
      top 0
      width 100%
      height 100%
      opacity .85
      z-index -1
    &-content
      text-align center
    &-text
      color #fff
      font-size 34px
      line-height 38px
      font-weight bold
      padding 23px 20px
      text-align center
      margin-bottom 20px
      text-transform uppercase
    &-more
      display inline-block
      vertical-align top
      border-radius 5px
      width 198px
      height 68px
      border 4px solid rgba(#fff, .7)
      color #fff
      font-size 18px
      line-height 22px
      padding 23px 20px
