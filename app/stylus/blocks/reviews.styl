.reviews
  padding 36px 0 40px
  margin-bottom 30px
  background-repeat no-repeat
  background-position center bottom
  background-size cover
  &:last-child
    margin-bottom 0
  &__title
    color #fff
    margin-bottom 49px
  &__wrap
    position relative
    max-width 700px
    margin 0 auto
    padding 0 70px
  &__item
    padding 58px 50px 140px
    // background url('../../../../static/img/review-decor.png') no-repeat center top
    // background-size 100% 100%
    &-author
      margin-bottom 8px
    &-author, &-text
      color #4e4e4d
      font-size 23px
      line-height 28px
      font-style italic
  .swiper
    &-container
      background url('../../../../static/img/bottom.png') no-repeat center bottom
      background-size 100% 247px
      &:before
        @extend .before
        left 0
        top 0
        width 100%
        height 118px
        background url('../../../../static/img/top.png') no-repeat center top
        background-size 100% 118px
      &:after
        @extend .after
        left 0
        top 118px
        width 100%
        height calc(100% - 365px)
        background url('../../../../static/img/middle.png') repeat-y center top
        background-size 100%
    &-button
      &-prev, &-next
        margin-top -44px
