.pluses
  margin-bottom 52px
  &:last-child
    margin-bottom 0
  &__title
    color #005eb8
    margin-bottom 69px
    @media $tPortraitMax
      font-size 26px
      line-height 30px
  &__items
    display flex
    flex-wrap wrap
    width calc(100% + 50px)
    margin 0 -25px
    @media $tPortraitMax
      width 100%
      margin 0
  &__item
    width calc(100%/3 - 50px)
    margin 0 25px
    @media $tPortraitMax
      display flex
      flex-wrap wrap
      width 100%
      margin 0 0 45px
      &:last-child
        margin-bottom 0
    &-overimg
      display flex
      justify-content center
      height 275px
      margin-bottom 51px
      @media $tPortraitMax
        width 140px
        flex-shrink 0
        height auto
        margin: 0 auto
        align-items flex-start
    &-img
      max-height 100%
      align-items center
    &-bottom
      @media $tPortraitMax
        width calc(100% - 180px)
        text-align: center
      @media $mLandscapeMax
        width 100%
        margin-top 15px
    &-title
      text-align center
      color #1a8200
      font-size 30px
      line-height 36px
      text-transform uppercase
      @media $tPortraitMax
        font-size 26px
				line-height 30px
    &-text
      color $default
      font-size 27px
      line-height 32px
      text-align: center

      @media $tPortraitMax
        text-align center
        font-size 18px
        line-height 20px
