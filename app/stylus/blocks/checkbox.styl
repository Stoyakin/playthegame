.checkbox
  display inline-block
  vertical-align top
  position relative
  text-align center
  &__input
    position absolute
    left 0
    top 0
    opacity 0
    &:checked ~ label .checkbox__item-ico:before
      opacity 1
    &.error ~ label .checkbox__item-ico
      background-color #C20314
  &__label
    display block
    position relative
    font-family Calibri
    font-size 25px
    line-height 32px
    color #575353
    cursor pointer
    a
      color #3e6dc8
      border-bottom 1px solid #3e6dc8
      transition border .4s
      &:hover
        border-bottom-color transparent
  &__item-ico
    position relative
    display inline-block
    vertical-align top
    margin-top 2px
    margin-right 5px
    border-radius 5px
    width 29px
    height 28px
    background url('data:image/png;base64,') no-repeat center
    transition background .4s
    &:before
      content ''
      display block
      position absolute
      left 0
      top 0
      width 29px
      height 28px
      background url('data:image/png;base64,') no-repeat center
      opacity 0
      transition opacity .4s
