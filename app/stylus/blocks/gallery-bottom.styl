.gallery-bottom
  .container
    position relative
  &__item
    &-overimg
      display block
      position relative
      width 100%
      padding-top 100%
      overflow hidden
      &:before
        @extend .before
        left 0
        top 0
        width 100%
        height 100%
        background url('data:image/png;base64,') no-repeat center rgba(0,0,0,.65)
        opacity 0
        transition opacity .4s
        z-index 1
      &:hover
        &:before
          opacity 1
    &-img
      position absolute
      left 0
      top 0
      width 100%
      height 100%
      object-fit cover
  .swiper
    &-slide
      max-width 303px
