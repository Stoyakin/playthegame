.footer
  padding 40px 0
  .container
    display flex
    flex-wrap wrap
    justify-content space-between
    align-items center
    @media (max-width: 540px)
      flex-direction column
      align-items center
      text-align center
  &__coopy
    color #4e4e4d
    line-height 18px
    text-transform uppercase
    letter-spacing -0.03em
  &__href
    text-align right
    align-self flex-end

    a
      color #4e4e4d
      line-height 18px
      text-transform uppercase
      letter-spacing -0.03em
      transition color .4s
      @media (max-width: 540px)
        align-self center
        margin-top 15px
        &:first-child
          margin-top 0
      &:hover
        color #000
