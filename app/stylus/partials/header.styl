.header
  position relative
  padding 68px 0 28px
  background-color #005EBC
  overflow hidden
  z-index 1
  &:before
    @extend .before
    left 0
    top 0
    width 100%
    height 224px
    background url('../../../../static/img/pattern.png') no-repeat center
    z-index -1
  .container
    display flex
    justify-content center
    align-items center
    flex-wrap wrap
  &__logo
    display flex
    align-items center
    height 125px
    margin-right 31px
    transform translateY(2px)
    transition opacity .4s
    &:hover
      opacity .7
  &__burger
    display none
