.header
  position relative
  padding 68px 0 28px
  background-color #005EBC
  overflow hidden
  z-index 5
  @media $desktopToTouch
    padding 30px 0
  @media $tPortraitMax
    padding 0
  &:before
    @extend .before
    left 0
    top 0
    width 100%
    height 224px
    background url('../../../../static/img/pattern.png') no-repeat center
    z-index -1
  .container
    display flex
    justify-content center
    align-items center
    flex-wrap wrap
    @media $tPortraitMax
      justify-content space-between
  &__logo
    display flex
    align-items center
    height 125px
    margin-right 31px
    transform translateY(2px)
    transition opacity .4s
    @media $tPortraitMax
      height auto
      transform none
    &-img
      @media $tPortraitMax
        width 100px
    &:hover
      opacity .7
  &__burger
    display none
    justify-content center
    align-items center
    width 44px
    height 44px
    padding 0
    background none
    border none
    outline none
    z-index 10
    span
      position relative
      width 44px
      height 4px
      background-color #ffc237
      &:before, &:after
        content ''
        display block
        position absolute
        left 0
        width 100%
        height 4px
        background-color #ffc237
      &:before
        top -11px
      &:after
        bottom -11px
    &.active
      span
        background-color transparent
        &:before
          top 0
          transform rotate(45deg)
        &:after
          bottom 0
          transform rotate(-45deg)
    @media $tPortraitMax
      display flex
